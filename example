    <script>
        // Simple fade-in on scroll
        const observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: 0.1 // Trigger when 10% of the element is visible
        };

        const observer = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                    // Optional: unobserve after animation to save resources
                    // observer.unobserve(entry.target); 
                }
            });
        }, observerOptions);

        document.querySelectorAll('.fade-in-up').forEach(el => {
            observer.observe(el);
        });

        // Set current year in footer
        document.getElementById('currentYear').textContent = new Date().getFullYear();

        // Komentar di bawah ini adalah contoh penggunaan lucide jika ini adalah proyek React,
        // namun karena ini HTML biasa dan ikon sudah SVG, ini tidak diperlukan dan menyebabkan error jika script lucide-react disertakan.
        // if (typeof lucide !== 'undefined') {
        //     const iconElement = document.getElementById('my-icon-placeholder');
        //     if (iconElement) {
        //         iconElement.innerHTML = lucide.createElement(lucide.Heart);
        //     }
        // }
    </script>

